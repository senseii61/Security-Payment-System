@model List<Gos_deneme.Models.Siparisler>
@{
    Layout = "~/Views/Shared/_LayoutMusteri.cshtml";
    ViewData["Title"] = "Ödeme Bekleyen Siparişler";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-warning">💰 Ödeme Bekleyen Siparişler</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-success text-center">Ödeme bekleyen sipariş bulunmamaktadır.</div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-warning">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Sipariş Tarihi</th>
                        <th scope="col">Durum</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in Model)
                    {
                        <tr>
                            <th>@s.SiparisID</th>
                            <td>@s.SiparisTarih.ToString("dd.MM.yyyy")</td>
                            <td>@s.SiparisDurum</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
